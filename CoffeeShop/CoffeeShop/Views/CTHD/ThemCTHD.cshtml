@model CoffeeShop.Models.CTHDView;
<!--để nó hiểu những biến trong viewmodel-->
@{ Layout = "~/Views/Shared/_Layout.cshtml"; //dùng lại layout ở share }

}

<br />
<div class="col-md-10" style="margin-left: 8%">
    @if (ViewBag.Success != null)
    {
        <span class="text-success">@ViewBag.Success</span>}
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Thêm CTHD</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-controller="CTHD" asp-action="ThemCTHDData">
            @*đường dẫn đến admin/ chạy quanlíanphamcontroler/ chạy hàm them sản phẩm*@
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Mã HĐ</label>
                    <input asp-for="cthdDTO.MaHD" class="form-control" id="exampleInputEmail1" placeholder="Nhập mã HĐ">
                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Mã Món</label>
                    <input asp-for="cthdDTO.MaMon" class="form-control" id="exampleInputEmail1" placeholder="Nhập mã món">
                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Tên Món</label>
                    <input asp-for="cthdDTO.TenMon" class="form-control" id="exampleInputEmail1" placeholder="Nhập tên món">
                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Số Lượng</label>
                    <input asp-for="cthdDTO.SoLuong" class="form-control" id="exampleInputEmail1" placeholder="Nhập số lượng">
                    <span class="focus-input100 text-danger"></span>
                </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Giá</label>
                                <input asp-for="cthdDTO.Gia" class="form-control" id="exampleInputEmail1" placeholder="Nhập giá">
                                <span class="focus-input100 text-danger"></span>
                            </div>
                <!--Combobox-->
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button data-toggle="modal" data-target="#exampleModal" type="submit" class="btn btn-primary">Thêm</button>
            </div>
        </form>

    </div>
    <!-- /.card -->

</div>
