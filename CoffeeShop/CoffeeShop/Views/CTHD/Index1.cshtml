@model CoffeeShop.Models.CTHDView;
<!--để nó hiểu những biến trong viewmodel-->
@{
    ViewData["Title"] = "Index1";
    Layout = "~/Views/Shared/_Layout.cshtml"; //dùng lại layout ở share
}
<br>

        <td>
            <a class="btn btn-block btn-warning" asp-controller="CTHD" asp-action="ThemCTHD" asp-route-id="@ViewContext.RouteData.Values["id"].ToString()"
               style="background-color: #4e73df; width: 10%; margin-left: 2%; border: 1px solid #4e73df;">Tạo Mới</a>
        </td>


<br>
<!-- end search  -->
<!--begin table-->
<table class="table table-striped" style=" width: 96%; margin-left: 2%; border: 1px solid #dee2e6;">
    <thead>
        <tr>
            <th scope="col">Mã HĐ</th>
            <th scope="col">Mã Món</th>
            <th scope="col">Tên Món</th>
            <th scope="col">Số Lượng</th>
            <th scope="col">Giá</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.CTHD != null)
        {
            @foreach (var item in Model.CTHD)//tạo vòng lặp để duyệt từng phần tử trong viewbag để show ra
            {
                @if (@item.MaHD == ViewContext.RouteData.Values["id"].ToString())
                {

                    <tr>
                        <td>@item.MaHD</td>
                        <td>@item.MaMon</td>
                        <td>@item.TenMon</td>
                        <td>@item.SoLuong</td>
                        <td>@item.Gia</td>
                        <td>
                        </td>
                        <td>
                            <button id="xoaCTHD" data-toggle="modal" data-target="#exampleModalCenter" class="btn btn-block btn-danger" data-id="@item.ID">Xóa</button>
                    </tr>

                }
                else continue;
            }
        }

    </tbody>

</table>

@{
    @* setup nút quay về , trỏ vào hàm HasPreviousPage ở PaginatedList để kiểm tra *@
    var prevDisabled = !Model.CTHD.HasPreviousPage ? "disabled" : "";
    @* setup nút tiến tới , trỏ vào hàm HasNextPage ở PaginatedList để kiểm tra *@
    var nextDisabled = !Model.CTHD.HasNextPage ? "disabled" : "";
}
@* Tạo nút quay về, nút này trỏ trực tiếp về Index và truyền parameter pageIndex *@
<a class="btn btn-default @prevDisabled"
   asp-route-pageIndex="@(Model.CTHD.PageIndex -1)">Previous</a>
@* Tạo nút tiến lên, nút này trỏ trực tiếp về Index và truyền parameter pageIndex *@
<a class="btn btn-default @nextDisabled"
   asp-route-pageIndex="@(Model.CTHD.PageIndex +1)">Next</a>

<!--Thẻ show lên xác nhận xóa hay không-->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Thông báo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa?
            </div>
            <div class="modal-footer" id="footer-del">

            </div>
        </div>
    </div>
</div>
<!--Kết thúc thẻ xác nhận không có gì đặc biệt-->
<!--end table-->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript">
    //viết jquery, do xài cái model để xác nhận có muốn xóa hay không thì mình không lấy mã trực tiếp như cái sửa được nên phải viết thêm cái này
    $("button#xoaCTHD").click(function ()//tạo sự kiên click cho cái button ở trên theo cú pháp của jquery: "tenthe#mã thẻ"
    {
        var id = $(this).data("id");//gán ID đã được lưu vào data-id ở trên để gán vào biến id
        var obj = '<a class="btn btn-success" href="https://localhost:44359/CTHD/XoaCTHDData/' + id + '">Có</a>'
            + '<button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>';//tạo biến obj để lưu lại cái html mình cần xuất ra, cái này tui không quá rõ
        $("div#footer-del").html(obj);//gọi cái thẻ div có mã là footer-del để chèn phần html zo
    });
</script>
