
@model CoffeeShop.Models.CTHDView;
<!--để nó hiểu những biến trong viewmodel-->
@{ Layout = "~/Views/Shared/_Layout.cshtml"; //dùng lại layout ở share }
  
    }
<br />
<div class="col-md-10" style="margin-left: 8%">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title"> Sửa CTHD</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form  asp-controller="CTHD" asp-action="SuaCTHDData">
            @*đường dẫn đến admin/ chạy quanlíanphamcontroler/ chạy hàm them sản phẩm*@
            <div class="card-body">

                <div class="form-group">
                    <label for="exampleInputEmail1">Mã HĐ</label>
                    <input asp-for="cthdDTO.MaHD" value="@ViewBag.SuaCTHD.MaHD" readonly="readonly" class="form-control" id="exampleInputEmail1" placeholder="Nhập mã HĐ">

                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Mã Món</label>
                    <input asp-for="cthdDTO.MaMon" value="@ViewBag.SuaCTHD.MaMon" readonly="readonly" class="form-control" id="exampleInputEmail1" placeholder="Nhập mã món">

                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Tên Món</label>
                    <input asp-for="cthdDTO.TenMon" value="@ViewBag.SuaCTHD.TenMon" class="form-control" id="exampleInputPassword1" placeholder="Nhập tên món">@*asp-for định danh cho cái input, value là lấy dữ liệu để bên sửa có dữ liệu*@
                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Số Lượng</label>
                    <input asp-for="cthdDTO.SoLuong" value="@ViewBag.SuaCTHD.SoLuong" class="form-control" id="exampleInputPassword1" placeholder="Nhập số lượng">@*asp-for định danh cho cái input, value là lấy dữ liệu để bên sửa có dữ liệu*@
                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Giá</label>
                    <input asp-for="cthdDTO.Gia" value="@ViewBag.SuaCTHD.Gia" class="form-control" id="exampleInputPassword1" placeholder="Nhập giá">@*asp-for định danh cho cái input, value là lấy dữ liệu để bên sửa có dữ liệu*@
                    <span class="focus-input100 text-danger"></span>
                </div>
                <!--Combobox-->
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </form>
    </div>
    <!-- /.card -->

</div>

