@model CoffeeShop.Models.HoaDonView;
<!--để nó hiểu những biến trong viewmodel-->
@{ Layout = "~/Views/Shared/_Layout.cshtml"; //dùng lại layout ở share }

}
<br />
<div class="col-md-10" style="margin-left: 8%">
    @if (ViewBag.Success != null)
    {
<span class="text-success">@ViewBag.Success</span>}
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Thêm hóa đơn</h3>  
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form  asp-controller="HoaDon" asp-action="ThemHoaDonData">
            @*đường dẫn đến admin/ chạy quanlíanphamcontroler/ chạy hàm them sản phẩm*@
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Mã HĐ</label>
                    <input asp-for="hoadonDTO.MaHD" class="form-control" id="exampleInputEmail1" placeholder="Nhập mã hóa đơn">
                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mã NV</label>
                    <input asp-for="hoadonDTO.MaNV" class="form-control" id="exampleInputPassword1" placeholder="Nhập mã NV">@*asp-for định danh cho cái input*@
                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Ngày Lập</label>
                    <input class="form-control" id="exampleInputPassword1" placeholder="Nhập ngày" disabled>@*asp-for định danh cho cái input*@
                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Thời Gian</label>
                    <input  class="form-control" id="exampleInputPassword1" placeholder="Nhập thời gian"disabled >@*asp-for định danh cho cái input*@
                    <span class="focus-input100 text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Số Lượng</label>
                    <input asp-for="hoadonDTO.SoLuong" class="form-control" id="exampleInputPassword1" placeholder="Nhập số lượng">@*asp-for định danh cho cái input*@
                    <span class="focus-input100 text-danger"></span>
                </div>
         
                <!--Combobox-->
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button data-toggle="modal" data-target="#exampleModal" type="submit" class="btn btn-primary">Thêm</button>
            </div>
        </form>

    </div>
    <!-- /.card -->
</div>
<script>
    var today = new Date();
    var date = today.getDate() + '/' + (today.getMonth() + 1) + '/' + today.getFullYear();
    document.getElementById("date").innerHTML = date;
</script>
<script>
    var today = new Date();
    var time = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds();

    document.getElementById("time").innerHTML = time;
</script>
